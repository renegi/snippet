{
  "version": 2,
  "builds": [
    {
      "src": "podquote/client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "podquote/server/index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "podquote/server/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "podquote/client/build/$1"
    }
  ],
  "installCommand": "cd podquote && npm run install-all",
  "buildCommand": "cd podquote && npm run build"
} 